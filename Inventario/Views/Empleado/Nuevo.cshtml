<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuevo Empleado</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        input {
            text-transform: uppercase;
        }
        .modal-content {
            padding: 20px;
        }
        .modal-header {
            border-bottom: none;
        }
        .modal-footer {
            border-top: none;
        }

        
    </style>
</head>
<body>
    <div class="container mt-4" style="background-color = red;">
        <div class="row">
            <div class="col-12">
                <h1 class="display-6">Nuevo Empleado</h1>
                <h2 class="text-muted">@Model.RespuestaSql</h2>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <form class="form" action="@Url.Action("Insert","Empleado")" method="post">
                    <div class="mb-3">
                        <label for="CodEmple" class="form-label">Código del Empleado</label>
                        <input type="text" class="form-control" value="@Model.Cod_Emple" name="Cod_Emple" id="CodEmple" required>
                    </div>

                    <div class="mb-3">
                        <label for="empleado" class="form-label">Nombre</label>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@Model.Nombre" name="Nombre" id="empleado" required>
                            <button type="button" class="btn btn-secondary" id="seleccionarEmpleadoBtn">Seleccionar Empleado</button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Area" class="form-label">Área</label>
                        <input type="text" class="form-control" value="@Model.Area" name="Area" id="Area" required>
                    </div>

                    <div class="mb-3">
                        <label for="Estado" class="form-label">Estado</label>
                        <select name="Estado" id="Estado" class="form-select" required>
                            @if (Model.Estado == "A")
                            {
                                    <option value="A" selected>Activo</option>
                                    <option value="I">Inactivo</option>
                            }
                            else
                            {
                                    <option value="A">Activo</option>
                                    <option value="I" selected>Inactivo</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Sucursal" class="form-label">Sucursal</label>
                        <input type="text" class="form-control" value="@Model.Sucursal" name="Sucursal" id="Sucursal" required>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="@Url.Action("Home_","Home")" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- El Popup -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Seleccionar Empleado</h2>
            <table id="empleadosTable">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Acción</th>
                </tr>
                <!-- Iterar sobre los empleados del modelo -->
                @foreach (var empleado in Model.Empleados)
                {
                    <tr>
                        <td>@empleado.Cod_Emple</td>
                        <td>@empleado.Nombre</td>
                        <td><button class="selectEmpleadoBtn" data-cod-emple="@empleado.Cod_Emple" data-nombre="@empleado.Nombre">Seleccionar</button></td>
                    </tr>
                }
            </table>
        </div>
    </div>

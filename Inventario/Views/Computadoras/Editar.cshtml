@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model MComputadora



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Registro - Computadora</title>
    <link href="../css/spinnerloader.css" rel="stylesheet" />
    <link href="../css/datatables.bootstrap5.min.css" rel="stylesheet" />
    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link href="../css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="../css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="../css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <script src="../lib/jquery/dist/jquery.min.js"></script>
    <script src="../lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/jquery.dataTables.min.js"></script>
    <style>
        .text {
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="mb-4 encabezado">
            <h2>Editar Computadora</h2>
        </div>
        <br />
        <form class="row g-3 factura-form" action=@Url.Action("Actualizar","Computadoras") method="post">
            @Html.AntiForgeryToken()

            <div class="col-md-4">
                <label class="form-label">Código Empleado</label>
                <input class="form-control text" type="text" value="@Model.Cod_Emple" name="Cod_Emple" id="CodEmple">
            </div>

            <div class="col-md-6">
                <label class="form-label">Nombre</label>
                <div class="input-group">
                    <input class="form-control text" type="text" value="@Model.Nombre" name="Nombre" id="empleado">
                    <button type="button" class="btn btn-outline-primary" id="seleccionarEmpleadoBtn">Seleccionar Empleado</button>
                </div>
            </div>
           
            <div class="col-md-4">
                <label class="form-label">No. Inventario</label>
                <input class="form-control text" type="text" value="@Model.No_Inventario" name="No_Inventario">
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Tipo</label>
                <input class="form-control text" type="text" value="@Model.Tipo" name="Tipo">
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Marca</label>
                <input class="form-control text" type="text" value="@Model.Marca" name="Marca">
            </div>

            <div class="col-md-4">
                <label class="form-label">Modelo</label>
                <input class="form-control text" type="text" value="@Model.Modelo" name="Modelo">
            </div>

            <div class="col-md-4">
                <label class="form-label">Serie</label>
                <input class="form-control text" type="text" value="@Model.Serie" name="Serie" readonly>
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Procesador</label>
                <input class="form-control text" type="text" value="@Model.Procesador" name="Procesador">
            </div>

            <div class="col-md-4">
                <label class="form-label">Generación</label>
                <input class="form-control text" type="text" value="@Model.Generacion" name="Generacion">
            </div>

            <div class="col-md-4">
                <label class="form-label">Tipo de Disco</label>
                <input class="form-control text" type="text" value="@Model.TipoDisco" name="TipoDisco">
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Capacidad de Disco</label>
                <input class="form-control text" type="text" value="@Model.CapacidadDisco" name="CapacidadDisco">
            </div>

            <div class="col-md-4">
                <label class="form-label">RAM</label>
                <input class="form-control text" type="text" value="@Model.Ram" name="Ram">
            </div>

            <div class="col-md-4">
                <label class="form-label">Mac Address</label>
                <input class="form-control text" type="text" value="@Model.MacAddress" name="MacAddress">
            </div>
            
            <div class="col-md-4">
                <label class="form-label">No IP</label>
                <input class="form-control text" type="text" value="@Model.NoIp" name="NoIp">
            </div>

            <div class="col-md-4">
                <label class="form-label">Teclado</label>
                <input class="form-control text" type="text" value="@Model.Teclado" name="Teclado">
            </div>

            <div class="col-md-4">
                <label class="form-label">Mouse</label>
                <input class="form-control text" type="text" value="@Model.Mouse" name="Mouse">
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Nombre PC</label>
                <input class="form-control text" type="text" value="@Model.NombrePc" name="NombrePc">
            </div>

            <div class="col-md-4">
                <label class="form-label">Dominio</label>
                <input class="form-control text" type="text" value="@Model.Dominio" name="Dominio">
            </div>

            <div class="col-md-4">
                <label class="form-label">Usuario</label>
                <input id="Usuario" class="form-control text" type="text" value="@Model.Usuario" name="Usuario">
            </div>

            <div class="col-md-4">
                <label class="form-label">Contraseña</label>
                <input id="Contra" class="form-control Contraseña" type="text" value="@Model.Contra" name="Contra" oninput="this.value = this.value">
            </div>
           
            <div class="col-md-3">
                <label class="form-label">Estado</label>
                <select class="form-select" name="Estado">
                    @if (Model.Estado == "A")
                    {
                        <option value="A" selected>Activo</option>
                        <option value="I">Inactivo</option>
                    }
                    else
                    {
                        <option value="A">Activo</option>
                        <option value="I" selected>Inactivo</option>
                    }
                </select>
            </div>
            
            @*<input type="text" value="@Model.Estado" name="Estado">*@
            <div class="col-md-3">
                <label class="form-label">Condición</label>
                <select class="form-select" name="Condicion">
                    @if (Model.Condicion == "B")
                    {
                        <option value="B" selected>Buen estado</option>
                        <option value="M">Mal estado</option>
                    }
                    else
                    {
                        <option value="B">Buen estado</option>
                        <option value="M" selected>Mal estado</option>
                    }
                </select>
            </div>
            
            <br />
            <br />
            <div class="col-12 d-flex justify-content-start gap-2 mt-4">
                <button type="submit" id="Editar" class="btn btn-success">Guardar</button>
                <a href="@Url.Action("Home_", "Home")" id="cancelar" class="btn btn-secondary">Cancelar</a>
                <a href=@Url.Action("Nuevo","Computadoras") id="Nuevo" class="btn btn-outline-primary">Nuevo</a>
                <button type="button" class="btn btn-primary" onclick="verificarSSH()">Verificar información</button>
            </div>
           

            @*  <input type="hidden" id="NoIp" value="@Model.NoIp" />
            <input type="hidden" id="Usuario" value="@Model.Usuario" />
            <input type="hidden" id="Contra" value="@Model.Contra" /> *@

            <!-- Puedes cambiar el comando también -->
            

            <input type="hidden" id="Comando" value="hostname" />

            <div id="resultadoSSH" class="mt-3 text-success"></div>
        </form>
    </div>
   

    <div class="contenido-mvc">
        
    </div>

    <!-- El Popup -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Seleccionar Empleado</h2>
            <div class="col-12">
                <table id="empleadosTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <!-- Iterar sobre los empleados del modelo -->
                    <tbody>
                        @foreach (var empleado in Model.Empleados)
                        {
                            <tr>
                                <td>@empleado.Cod_Emple</td>
                                <td>@empleado.Nombre</td>
                                <td><button class="selectEmpleadoBtn" data-cod-emple="@empleado.Cod_Emple" data-nombre="@empleado.Nombre">Seleccionar</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function() {
            // Inicializar DataTables en tu tabla
            $('#empleadosTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es_es.json" // Idioma español
                }
            });
        });
    </script>

    <!-- Scripts -->
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/customScript.js"></script>

</body>
</html>
@model MTelefono

@{
    var CEmple = new Empleado();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Teléfono</title>
    <style>
        input {
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="encabezado">
        <h2>Editar Teléfono</h2>
    </div>

    <div class="contenido-mvc">
        <form class="factura-form" action="@Url.Action("Actualizar", "Telefono")" method="post">
            <label for="CodEmple">Código Empleado</label>
            <input type="text" value="@Model.Cod_Emple" name="Cod_Emple" id="CodEmple">
            <br />

            <label for="empleado">Nombre</label>
            <input type="text" value="@Model.Nombre" name="Nombre" id="empleado">
            <button type="button" id="seleccionarEmpleadoBtn">Seleccionar Empleado</button>
            <br />

            <label for="NoInventario">No Inventario</label>
            <input type="text" value="@Model.NoInventario" name="NoInventario" readonly>
            <br />

            <label for="Marca">Marca</label>
            <input type="text" value="@Model.Marca" name="Marca">
            <br />

            <label for="Modelo">Modelo</label>
            <input type="text" value="@Model.Modelo" name="Modelo">
            <br />

            <label for="Serie">Serie</label>
            <input type="text" value="@Model.Serie" name="Serie" readonly>
            <br />

            <label for="Tipo">Tipo</label>
            <input type="text" value="@Model.Tipo" name="Tipo">
            <br />

            <label for="Estado">Estado</label>
            <select name="Estado">
                @if (Model.Estado == "A")
                {
                    <option value="A" selected>Activo</option>
                    <option value="I">Inactivo</option>
                }
                else
                {
                    <option value="A">Activo</option>
                    <option value="I" selected>Inactivo</option>
                }
            </select>
            <br />

            <label for="Condicion">Condición</label>
            <select name="Condicion">
                @if (Model.Condicion == "B")
                {
                    <option value="B" selected>Buen estado</option>
                    <option value="M">Mal Estado</option>
                }
                else
                {
                    <option value="B">Buen estado</option>
                    <option value="M" selected>Mal Estado</option>
                }
            </select>
            <br />

            <br />
            <button type="submit">Guardar</button>
            <button type="button" id="cancelar"><a href="@Url.Action("Home_", "Home")">Cancelar</a></button>
            <button type="button" id="Nuevo"><a href="@Url.Action("Nuevo", "Telefono")">Nuevo</a></button>
        </form>
    </div>

    <!-- El Popup -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Seleccionar Empleado</h2>
            <table id="empleadosTable">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Acción</th>
                </tr>
                <!-- Iterar sobre los empleados del modelo -->
                @foreach (var empleado in Model.Empleados)
                {
                    <tr>
                        <td>@empleado.Cod_Emple</td>
                        <td>@empleado.Nombre</td>
                        <td><button class="selectEmpleadoBtn" data-cod-emple="@empleado.Cod_Emple" data-nombre="@empleado.Nombre">Seleccionar</button></td>
                    </tr>
                }
            </table>
        </div>
    </div>

    

    <script src="~/js/customScript.js"></script>
</body>
</html>

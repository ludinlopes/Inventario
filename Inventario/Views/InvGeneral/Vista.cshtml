                                {
                                    @computadora.Fecha_Actualizacion_Scn
                                }
                            </td>

                            <td contenteditable="false">@computadora.No_Inventario_Ups</td>
                            <td contenteditable="false">@computadora.Marca_Ups</td>
                            <td contenteditable="false">@computadora.Modelo_Ups</td>
                            <td contenteditable="false">@computadora.Serie_Ups</td>
                            <td contenteditable="false">@computadora.Estado_Ups</td>
                            <td contenteditable="false">@computadora.Condicion_Ups</td>
                            <td contenteditable="false">
                                @if (@computadora.Fecha_Actualizacion_Ups != "1/01/2000 00:00:00")
                                {
